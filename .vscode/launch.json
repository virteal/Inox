{
        // Use IntelliSense to learn about possible attributes.
        // Hover to view descriptions of existing attributes.
        // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Launch via NPM",
                        "request": "launch",
                        "type": "node",
                        "runtimeExecutable": "npm",
                        "runtimeArgs": [
                                "run-script",
                                "run"
                        ],
                        "skipFiles": [
                                "<node_internals>/**"
                        ]
                },

                {
                        "name": "Launch Program",
                        "request": "launch",
                        "type": "node",
                        "program": "${workspaceFolder}\\lib\\inox.ts",
                        "preLaunchTask": "tsc: build - tsconfig.json",
                        "skipFiles": [
                                "<node_internals>/**"
                        ]
                },

                {
                        "name": "Launch node directly",
                        "request": "launch",
                        "type": "node",
                        "program": "${workspaceFolder}\\lib\\inox.ts",
                        "skipFiles": [
                                "<node_internals>/**"
                        ],
                        "outputCapture": "std"
                }
        ]
}
