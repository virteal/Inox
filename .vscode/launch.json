{
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Launch via NPM",
                        "request": "launch",
                        "type": "node",
                        "runtimeExecutable": "npm",
                        "runtimeArgs": [
                                "run-script",
                                "run"
                        ],
                        "skipFiles": [
                                "<node_internals>/**"
                        ]
                },
                {
                        "name": "Launch Program",
                        "request": "launch",
                        "type": "node",
                        "program": "${workspaceFolder}\\builds\\inox.js",
                        "preLaunchTask": "tsc: build - tsconfig.json",
                        "skipFiles": [
                                "<node_internals>/**"
                        ]
                },
                {
                        "name": "Launch node directly",
                        "request": "launch",
                        "type": "node",
                        "program": "${workspaceFolder}\\builds\\inox.js",
                        "skipFiles": [
                                "<node_internals>/**"
                        ],
                        "outputCapture": "std"
                },
                {
                        "name": "C/C++: cl.exe build and debug active file",
                        "type": "cppvsdbg",
                        "request": "launch",
                        "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
                        "args": [],
                        "stopAtEntry": true,
                        "cwd": "${fileDirname}",
                        "environment": [],
                        "preLaunchTask": "C/C++: cl.exe build active file"
                },
        ]
}
