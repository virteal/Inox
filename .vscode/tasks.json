{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C++: build active file",
                        "command": "cl.exe",
                        "args": [
                                "/DEBUG",
                                "/Zi",
                                "/EHsc",
                                "/std:c++17",
                                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                                "${file}"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$msCompile"
                        ],
                        "group": "build",
                        "presentation": {
                          "reveal": "always",
                          "panel": "shared",
                          "showReuseMessage": true,
                          "clear": true,
                          "close": false,
                          "echo": true,
                          "focus": true
                        },
                        "detail": "JHR's, compiler: cl.exe"
                },
                {
                        "type": "shell",
                        "label": "C++: shell build debug inox.exe",
                        "command": "cl.exe",
                        "args": [
                                "/DEBUG",
                                "/nologo",
                                "/utf-8",
                                "/Zi",
                                "/JMC",
                                "/EHsc",
                                "/std:c++latest",
                                "/Fe${workspaceFolder}\\builds\\inox.exe",
                                "${workspaceFolder}\\builds\\inox.cpp"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": [
                                "$msCompile"
                        ],
                        "group": "build",
                        "presentation": {
                          "reveal": "always",
                          "panel": "shared",
                          "showReuseMessage": true,
                          "clear": true,
                          "close": false,
                          "echo": true,
                          "focus": true
                        },
                        "detail": "JHR's, compiler: shell cl.exe"
                },
                {
                        "type": "shell",
                        "label": "C++: shell build fast inox.exe",
                        "command": "cl.exe",
                        "args": [
                                "/nologo",
                                "/utf-8",
                                "/O2",
                                "/Ot",
                                "/Ob2",
                                "/Oi",
                                "/GL",
                                "/Gr",
                                "/Gw",
                                "/Gy",
                                "/GF",
                                "/GS-",
                                "/GR-",
                                "/DFAST_INOX",
                                "/EHsc",
                                "/std:c++latest",
                                "/Fe${workspaceFolder}\\builds\\inox.exe",
                                "${workspaceFolder}\\builds\\inox.cpp",
                                "/link",
                                "/OPT:REF"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": [
                                "$msCompile"
                        ],
                        "group": "build",
                        "presentation": {
                          "reveal": "always",
                          "panel": "dedicated",
                          "showReuseMessage": true,
                          "clear": true,
                          "close": false,
                          "echo": true,
                          "focus": true
                        },
                        "detail": "JHR's, compiler: shell cl.exe"
                },
                {
                        "type": "shell",
                        "label": "Shell that starts inox.exe",
                        "command": "${workspaceFolder}\\builds\\inox.exe",
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
                        "group": "build",
                        "presentation": {
                          "reveal": "always",
                          "panel": "shared",
                          "showReuseMessage": false,
                          "clear": true,
                          "close": true,
                          "echo": false,
                          "focus": false
                        },
                        "detail": "JHR's"
                }
        ],
        "version": "2.0.0"
}
