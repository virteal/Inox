{
        "tasks": [
                {
                        "type": "shell",
                        "label": "C++: shell build debug inox.exe",
                        "command": "cl.exe",
                        "args": [
                                "/DEBUG",
                                "/W4",
                                "/nologo",
                                "/utf-8",
                                "/Zi",
                                "/JMC",
                                "/EHsc",
                                "/fsanitize=address",
                                "/std:c++latest",
                                "/Fe${workspaceFolder}\\builds\\inox.exe",
                                "${workspaceFolder}\\builds\\inox.cpp"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": [
                                "$msCompile"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "presentation": {
                                "reveal": "always",
                                "panel": "dedicated",
                                "showReuseMessage": true,
                                "clear": true,
                                "close": false,
                                "echo": true,
                                "focus": true
                        },
                        "detail": "JHR's, compiler: shell cl.exe"
                },
                {
                        "type": "shell",
                        "label": "C++: shell build fast inox.exe",
                        "command": "cl.exe",
                        "args": [
                                "/W4",
                                "/nologo",
                                "/utf-8",
                                "/O2",
                                "/Ot",
                                "/Ob2",
                                "/Oi",
                                "/GL",
                                "/Gr",
                                "/Gw",
                                "/Gy",
                                "/GF",
                                "/GS-",
                                "/GR-",
                                "/DINOX_FAST",
                                "/EHsc",
                                "/std:c++latest",
                                "/Fe${workspaceFolder}\\builds\\inox.exe",
                                "${workspaceFolder}\\builds\\inox.cpp",
                                "/link",
                                "/OPT:REF"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": [
                                "$msCompile"
                        ],
                        "group": "build",
                        "presentation": {
                                "reveal": "always",
                                "panel": "dedicated",
                                "showReuseMessage": true,
                                "clear": true,
                                "close": false,
                                "echo": true,
                                "focus": true
                        },
                        "detail": "JHR's, compiler: shell cl.exe"
                },
                {
                        "type": "shell",
                        "label": "C++: shell build inox.cpp.js",
                        "command": "C:\\cheerp\\bin\\clang++.exe",
                        "args": [
                                "-O3",
                                "-Wno-cheerp-unsafe",
                                "-Wno-cheerp-maybe-slow",
                                "-Wno-comment",
                                "-cheerp-bounds-check",
                                "-cheerp-pretty-code","-cheerp-strict-linking=error","-cheerp-sourcemap-standalone",
                                "-cheerp-dump-bc",
                                "-cheerp-no-credits",
                                "-v",
                                "-target",
                                "cheerp",
                                "${workspaceFolder}\\builds\\inox.cpp",
                                "-o",
                                "${workspaceFolder}\\builds\\inox.cpp.cheerp.js"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": {
                            "owner": "cheerp",
                            "fileLocation": ["relative", "${workspaceFolder}\\builds\\"],
                            "pattern": {
                                "regexp": "^([^:]+):(\\d+):(\\d+): error: (.+)$",
                                "file": 1,
                                "line": 2,
                                "column": 3,
                                "message": 4
                            }
                        },
                        "group": {
                                "kind": "build",
                                "isDefault": false
                        },
                        "presentation": {
                                "reveal": "always",
                                "panel": "dedicated",
                                "showReuseMessage": true,
                                "clear": true,
                                "close": false,
                                "echo": true,
                                "focus": true
                        },
                        "detail": "JHR's, compiler: shell clang++.exe"
                },
                {
                        "type": "shell",
                        "label": "Wasm: shell build inox.cpp.js",
                        "command": "C:\\cheerp\\bin\\clang++.exe",
                        "args": [
                                "-O3",
                                "-Wno-cheerp-unsafe",
                                "-Wno-cheerp-maybe-slow",
                                "-Wno-comment",
                                "-cheerp-bounds-check",
                                "-cheerp-pretty-code","-cheerp-strict-linking=error","-cheerp-sourcemap-standalone",
                                "-cheerp-dump-bc",
                                "-cheerp-no-credits",
                                "-v",
                                "-target",
                                "cheerp-wasm",
                                "${workspaceFolder}\\builds\\inox.cpp",
                                "-o",
                                "${workspaceFolder}\\builds\\inox.wasm.cheerp.js"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}\\builds"
                        },
                        "problemMatcher": {
                            "owner": "cheerp",
                            "fileLocation": ["relative", "${workspaceFolder}\\builds\\"],
                            "pattern": {
                                "regexp": "^([^:]+):(\\d+):(\\d+): error: (.+)$",
                                "file": 1,
                                "line": 2,
                                "column": 3,
                                "message": 4
                            }
                        },
                        "group": {
                                "kind": "build",
                                "isDefault": false
                        },
                        "presentation": {
                                "reveal": "always",
                                "panel": "dedicated",
                                "showReuseMessage": true,
                                "clear": true,
                                "close": false,
                                "echo": true,
                                "focus": true
                        },
                        "detail": "JHR's, compiler: shell clang++.exe"
                },
        ],
        "version": "2.0.0"
}
